-- [[ HELLSING MASTER SOURCE ]]
local Players = game:GetService("Players")
local RunService = game:GetService("RunService")
local LocalPlayer = Players.LocalPlayer

local Hellsing = Instance.new("ScreenGui", game.CoreGui)
local Main = Instance.new("Frame", Hellsing)
local Sidebar = Instance.new("Frame", Main)
local TabContainer = Instance.new("ScrollingFrame", Main)
local Title = Instance.new("TextLabel", Main)

-- [[ UI STYLING ]]
Main.Name = "HellsingMain"
Main.Size = UDim2.new(0, 420, 0, 320)
Main.Position = UDim2.new(0.5, -210, 0.5, -160)
Main.BackgroundColor3 = Color3.fromRGB(10, 10, 10)
Main.BorderSizePixel = 2
Main.BorderColor3 = Color3.fromRGB(255, 0, 0)
Main.Active = true
Main.Draggable = true

-- RENAMED GUI TITLE
Title.Size = UDim2.new(1, 0, 0, 35)
Title.BackgroundColor3 = Color3.fromRGB(20, 0, 0)
Title.Text = "Hellsing | Sab | Activated"
Title.TextColor3 = Color3.fromRGB(255, 255, 255)
Title.Font = Enum.Font.GothamBold
Title.TextSize = 14

Sidebar.Size = UDim2.new(0, 110, 1, -35)
Sidebar.Position = UDim2.new(0, 0, 0, 35)
Sidebar.BackgroundColor3 = Color3.fromRGB(15, 15, 15)
Sidebar.BorderSizePixel = 0

TabContainer.Size = UDim2.new(1, -120, 1, -45)
TabContainer.Position = UDim2.new(0, 115, 0, 40)
TabContainer.BackgroundTransparency = 1
TabContainer.CanvasSize = UDim2.new(0, 0, 12, 0) -- Scaled for all features
TabContainer.ScrollBarThickness = 2
Instance.new("UIListLayout", TabContainer).Padding = UDim.new(0, 6)

local function AddHellsingFeature(emoji, name, callback)
    local btn = Instance.new("TextButton", TabContainer)
    btn.Size = UDim2.new(1, -5, 0, 35)
    btn.BackgroundColor3 = Color3.fromRGB(25, 25, 25)
    btn.Font = Enum.Font.GothamBold
    btn.TextColor3 = Color3.fromRGB(200, 200, 200)
    btn.TextSize = 11
    
    local on = false
    local function update()
        btn.Text = emoji .. " | Hellsing " .. name .. (on and " [ON]" or " [OFF]")
        btn.TextColor3 = on and Color3.fromRGB(255, 0, 0) or Color3.fromRGB(200, 200, 200)
    end
    update()
    
    btn.MouseButton1Click:Connect(function()
        on = not on
        update()
        callback(on)
    end)
end

-- [[ CORE LOGIC IMPLEMENTATION ]]

-- HITBOX EXPANDER
AddHellsingFeature("üìê", "Hitbox Expander", function(v)
    _G.HellsingHBE = v
    task.spawn(function()
        while _G.HellsingHBE do
            for _, p in pairs(Players:GetPlayers()) do
                if p ~= LocalPlayer and p.Character and p.Character:FindFirstChild("HumanoidRootPart") then
                    p.Character.HumanoidRootPart.Size = Vector3.new(15, 15, 15)
                    p.Character.HumanoidRootPart.Transparency = 0.7
                    p.Character.HumanoidRootPart.Color = Color3.fromRGB(255, 0, 0)
                    p.Character.HumanoidRootPart.CanCollide = false
                end
            end
            task.wait(1)
        end
    end)
end)

-- SILENT AIM
AddHellsingFeature("üéØ", "Silent Aim", function(v)
    _G.HellsingSilent = v
end)

-- DESYNC
AddHellsingFeature("üåÄ", "Desync", function(v)
    _G.HellsingDesync = v
    RunService.Heartbeat:Connect(function()
        if _G.HellsingDesync and LocalPlayer.Character and LocalPlayer.Character:FindFirstChild("HumanoidRootPart") then
            LocalPlayer.Character.HumanoidRootPart.Velocity = Vector3.new(math.random(-500, 500), 0, math.random(-500, 500))
        end
    end)
end)

