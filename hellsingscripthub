-- [[ KEY SYSTEM CHECK ]]
local Key = "Hellsing2026"
local KeySystem = Instance.new("ScreenGui", game.CoreGui)
local KeyFrame = Instance.new("Frame", KeySystem)
local KeyInput = Instance.new("TextBox", KeyFrame)
local KeyBtn = Instance.new("TextButton", KeyFrame)
local KeyTitle = Instance.new("TextLabel", KeyFrame)

KeyFrame.Size = UDim2.new(0, 260, 0, 160)
KeyFrame.Position = UDim2.new(0.5, -130, 0.5, -80)
KeyFrame.BackgroundColor3 = Color3.fromRGB(15, 15, 15)
KeyFrame.BorderSizePixel = 2
KeyFrame.BorderColor3 = Color3.fromRGB(255, 0, 0)
KeyFrame.Active = true
KeyFrame.Draggable = true

KeyTitle.Size = UDim2.new(1, 0, 0, 35)
KeyTitle.Text = "üßõ HELLSING ACCESS"
KeyTitle.TextColor3 = Color3.fromRGB(255, 0, 0)
KeyTitle.BackgroundColor3 = Color3.fromRGB(0, 0, 0)
KeyTitle.Font = Enum.Font.GothamBold

KeyInput.Size = UDim2.new(0.8, 0, 0, 35)
KeyInput.Position = UDim2.new(0.1, 0, 0.35, 0)
KeyInput.PlaceholderText = "Enter Key: Hellsing2026"
KeyInput.BackgroundColor3 = Color3.fromRGB(30, 30, 30)
KeyInput.TextColor3 = Color3.fromRGB(255, 255, 255)
KeyInput.Text = ""

KeyBtn.Size = UDim2.new(0.6, 0, 0, 35)
KeyBtn.Position = UDim2.new(0.2, 0, 0.7, 0)
KeyBtn.Text = "LOAD HUB"
KeyBtn.BackgroundColor3 = Color3.fromRGB(150, 0, 0)
KeyBtn.TextColor3 = Color3.fromRGB(255, 255, 255)

-- [[ MAIN HUB ]]
local function LoadHellsingHub()
    KeySystem:Destroy()
    
    local Hellsing = Instance.new("ScreenGui", game.CoreGui)
    local Main = Instance.new("Frame", Hellsing)
    Main.BackgroundColor3 = Color3.fromRGB(15, 15, 15)
    Main.BorderSizePixel = 2
    Main.BorderColor3 = Color3.fromRGB(255, 0, 0)
    Main.Position = UDim2.new(0.1, 0, 0.15, 0)
    Main.Size = UDim2.new(0, 280, 0, 450)
    Main.Active = true
    Main.Draggable = true

    local Scroll = Instance.new("ScrollingFrame", Main)
    Scroll.Position = UDim2.new(0, 5, 0, 45)
    Scroll.Size = UDim2.new(1, -10, 1, -55)
    Scroll.BackgroundTransparency = 1
    Scroll.CanvasSize = UDim2.new(0, 0, 5, 0) -- Maximum scroll for all features
    Scroll.ScrollBarThickness = 4
    Instance.new("UIListLayout", Scroll).Padding = UDim.new(0, 6)

    local function AddToggle(emoji, name, callback)
        local btn = Instance.new("TextButton", Scroll)
        btn.Size = UDim2.new(1, 0, 0, 38)
        btn.BackgroundColor3 = Color3.fromRGB(30, 30, 30)
        btn.Font = Enum.Font.GothamSemibold
        btn.TextColor3 = Color3.fromRGB(255, 255, 255)
        
        local on = false
        local function update()
            btn.Text = emoji .. " | " .. name .. (on and " [ON]" or " [OFF]")
            btn.TextColor3 = on and Color3.fromRGB(255, 0, 0) or Color3.fromRGB(255, 255, 255)
        end
        update()
        btn.MouseButton1Click:Connect(function()
            on = not on
            update()
            callback(on)
        end)
    end

    -- [[ 1. STEALING & AUTO UTILITIES ]]
    AddToggle("‚ö°", "Instant Steal", function(v) print("Instant Steal: "..tostring(v)) end)
    AddToggle("ü§ñ", "Auto Steal", function(v) print("Auto Steal: "..tostring(v)) end)
    AddToggle("ü§ú", "Auto Hit", function(v) print("Auto Hit: "..tostring(v)) end)
    AddToggle("üõ†Ô∏è", "Updated Tools", function(v) end)
    AddToggle("üõí", "Auto Buy", function(v) end)

    -- [[ 2. MOVEMENT & POSITION ]]
    AddToggle("üïäÔ∏è", "Self Fly", function(v) getgenv().Fly = v end)
    AddToggle("‚ö°", "Speed Booster", function(v) game.Players.LocalPlayer.Character.Humanoid.WalkSpeed = v and 100 or 16 end)
    AddToggle("üï¥Ô∏è", "Inf Jump", function(v) getgenv().Inf = v end)
    
    AddToggle("üè†", "TP to Base", function(v)
        if v then
            local hrp = game.Players.LocalPlayer.Character.HumanoidRootPart
            hrp.CFrame = CFrame.new(0, 50, 0) -- Change (0, 50, 0) to your Base Coordinates
            print("Teleported to Base!")
        end
    end)

    AddToggle("üåÄ", "Desync", function(v)
        getgenv().Desync = v
        spawn(function()
            while getgenv().Desync do
                local hrp = game.Players.LocalPlayer.Character.HumanoidRootPart
                hrp.Velocity = Vector3.new(math.random(-100,100), 0, math.random(-100,100))
                task.wait(0.1)
            end
        end)
    end)

    -- [[ 3. SCANNING & FINDERS ]]
    AddToggle("üê∂", "Pet Finder", function(v) end)
    AddToggle("üîç", "Finder (Scans Map)", function(v) end)
    AddToggle("üëÅÔ∏è", "ESP Highlights", function(v) end)

    -- [[ 4. COMBAT & SURVIVAL ]]
    AddToggle("üéØ", "Aimbot", function(v) end)
    AddToggle("‚öîÔ∏è", "Anti Ragdoll", function(v) end)
    AddToggle("üõ°Ô∏è", "Anti Hit", function(v) end)
    AddToggle("üí§", "Anti AFK", function(v) end)

    -- [[ 5. TARGET UTILITIES ]]
    AddToggle("ü§ù", "Auto Grab", function(v) end)
    AddToggle("üèè", "Auto Bat", function(v) end)
    AddToggle("üè†", "Inside Base Allowed", function(v) end)
    AddToggle("üë•", "Disable Friends", function(v) end)

    -- [[ CLOSE ]]
    local Close = Instance.new("TextButton", Scroll)
    Close.Size = UDim2.new(1, 0, 0, 38)
    Close.BackgroundColor3 = Color3.fromRGB(150, 0, 0)
    Close.Text = "‚ùå | Destroy Hub"
    Close.TextColor3 = Color3.fromRGB(255, 255, 255)
    Close.MouseButton1Click:Connect(function() Hellsing:Destroy() end)
end

-- KEY LOGIC
KeyBtn.MouseButton1Click:Connect(function()
    if KeyInput.Text == Key then LoadHellsingHub() else KeyInput.Text = "WRONG KEY" end
end)
