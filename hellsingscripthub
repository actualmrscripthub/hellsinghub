-- BACKEND JUMP LOGIC
game:GetService("UserInputService").JumpRequest:Connect(function()
    if _G.HellsingJump then LocalPlayer.Character:FindFirstChildOfClass('Humanoid'):ChangeState("Jumping") end
end)

-- CLOSE BUTTON
local Close = Instance.new("TextButton", Sidebar)
Close.Size = UDim2.new(1, 0, 0, 35)
Close.Position = UDim2.new(0, 0, 1, -35)
Close.BackgroundColor3 = Color3.fromRGB(150, 0, 0)
